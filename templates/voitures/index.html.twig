{% extends 'base.html.twig' %}

{% block title %}Voitures index{% endblock %}

{% block body %}
    <h1>Voitures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modèle</th>
                <th>Année</th>
                <th>Motorisation</th>
                <th>Immatriculation</th>
                <th>Kilometrage</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.annee }}</td>
                <td>{{ voiture.motorisation }}</td>
                <td>{{ voiture.immatriculation }}</td>
                <td>{{ voiture.kilometrage }}</td>
                <td>{{ voiture.prix }}</td>
                <td>
                    <a href="{{ path('app_voitures_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voitures_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voitures_new') }}">Create new</a>
{% endblock %}
