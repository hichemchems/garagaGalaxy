{% extends 'base.html.twig' %}

{% block title %}Voitures index{% endblock %}

{% block body %}
    <h1>Voitures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Model</th>
                <th>Année</th>
                <th>Motorisation</th>
                <th>Immatriculation</th>
                <th>Kilometrage</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.Marque }}</td>
                <td>{{ voiture.Model }}</td>
                <td>{{ voiture.Année }}</td>
                <td>{{ voiture.Motorisation }}</td>
                <td>{{ voiture.Immatriculation }}</td>
                <td>{{ voiture.Kilometrage }}</td>
                <td>{{ voiture.Prix }}</td>
                <td>
                    <a href="{{ path('app_voitures_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voitures_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voitures_new') }}">Create new</a>
{% endblock %}
