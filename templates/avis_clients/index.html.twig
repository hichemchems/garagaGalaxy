{% extends 'base.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
    <h1>Avis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Display</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.name }}</td>
                <td>{{ avi.surname }}</td>
                <td>{{ avi.display ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_avis_crud_show', {'id': avi.id}) }}">show</a>
                    <a href="{{ path('app_avis_crud_edit', {'id': avi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avis_crud_new') }}">Create new</a>
{% endblock %}
